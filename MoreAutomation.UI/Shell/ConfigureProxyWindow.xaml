<Window x:Class="MoreAutomation.UI.Shell.ConfigureProxyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="配置代理" Height="200" Width="360" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="端口:" Width="80" VerticalAlignment="Center"/>
            <TextBox x:Name="PortBox" Width="120"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,8">
            <TextBlock Text="模式:" Width="80" VerticalAlignment="Center"/>
            <ComboBox x:Name="ModeBox" Width="150">
                <ComboBoxItem Content="HTTP"/>
                <ComboBoxItem Content="SOCKS5"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="取消" Width="80" Margin="0,0,10,0" Click="BtnCancel_Click"/>
            <Button Content="保存" Width="80" Click="BtnOk_Click"/>
        </StackPanel>
    </Grid>
</Window>
