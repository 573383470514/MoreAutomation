<Window x:Class="MoreAutomation.UI.Shell.PathSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="选择客户端路径" Height="180" Width="600" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="PathBox" Width="420" Margin="0,0,10,0"/>
            <Button Content="浏览..." Width="80" Click="Browse_Click"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="取消" Width="80" Margin="0,0,10,0" Click="BtnCancel_Click"/>
            <Button Content="确定" Width="80" Click="BtnOk_Click"/>
        </StackPanel>
    </Grid>
</Window>
