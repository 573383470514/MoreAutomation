        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <CheckBox x:Name="AgreeCheck" Content="我已阅读并同意以上条款" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Button x:Name="BtnCancel" Content="退出" Width="80" Margin="0,0,10,0" Click="BtnCancel_Click"/>
            <Button x:Name="BtnAccept" Content="同意并继续" Width="120" IsEnabled="False" Click="BtnAccept_Click"/>
        </StackPanel>
    </Grid>
</Window>
