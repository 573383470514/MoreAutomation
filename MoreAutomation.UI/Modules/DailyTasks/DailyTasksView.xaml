<UserControl x:Class="MoreAutomation.UI.Modules.DailyTasks.DailyTasksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="#FFFFFF">
        <StackPanel Margin="20" VerticalAlignment="Top">
            <TextBlock Text="日常任务管理" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>
            
            <TextBlock Text="常用任务" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
            
            <Border BorderBrush="#DDD" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                <StackPanel>
                    <CheckBox Content="定时签到（每日）" Margin="0,5"/>
                    <CheckBox Content="定时收菜（每小时）" Margin="0,5"/>
                    <CheckBox Content="定时浇水（每天3次）" Margin="0,5"/>
                    <CheckBox Content="自动合成（启用时进行）" Margin="0,5"/>
                </StackPanel>
            </Border>
            
            <TextBlock Text="任务调度" FontSize="14" FontWeight="Bold" Margin="0,20,0,10"/>
            
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="签到时间:" VerticalAlignment="Center" Width="80"/>
                    <TextBox Width="100" Text="08:00" Padding="5"/>
                    <TextBlock VerticalAlignment="Center" Margin="10,0,0,0" Foreground="#999" Text="HH:MM 格式"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="收菜频率:" VerticalAlignment="Center" Width="80"/>
                    <TextBox Width="100" Text="60" Padding="5"/>
                    <TextBlock VerticalAlignment="Center" Margin="10,0,0,0" Foreground="#999" Text="分钟"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="浇水时间:" VerticalAlignment="Center" Width="80"/>
                    <TextBox Width="100" Text="08:00,12:00,20:00" Padding="5"/>
                    <TextBlock VerticalAlignment="Center" Margin="10,0,0,0" Foreground="#999" Text="逗号分隔"/>
                </StackPanel>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Button Content="保存配置" Padding="15,8" Background="#4CAF50" Foreground="White" Margin="0,0,10,0"/>
                <Button Content="重置为默认" Padding="15,8" Background="#999" Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
